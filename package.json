{
    "name": "berkaygursoy",
    "version": "1.0.0",
    "scripts": {
        "dev": "parcel ./src/index.pug ./src/*.pug --dist-dir ./dist",
        "build": "npm run clean && parcel build ./src/*.pug --dist-dir ./ && npm run cp",
        "clean": "rm -rfd ./dist && rm -rfd ./*.css ./*.map ./*.html ./*.js ./*.ico ./*.jpeg ./*.xml ./assets",
        "cp": "cp ./src/sitemap.xml ./sitemap.xml"
    },
    "browserslist": "> 2%, not dead",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Berkays/berkaygursoy.git"
    },
    "author": "Berkay Gursoy",
    "license": "MIT",
    "homepage": "https://github.com/Berkays/berkaygursoy#readme",
    "devDependencies": {
        "@parcel/transformer-pug": "^2.6.0",
        "@parcel/transformer-sass": "^2.6.0",
        "parcel": "^2.6.0"
    }
}